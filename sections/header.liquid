{% javascript %}
  // Transparent header on scroll
  const header =  document.querySelector('.shopify-section-header');
  const scrollPoint = document.getElementById('MainContent');

  document.addEventListener('scroll', function(e) {
    const scrollPosition = window.scrollY;

    if (scrollPosition > scrollPoint.offsetTop) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  });

  (() => {
    const scrollPosition = window.scrollY;

    if (scrollPosition > scrollPoint.offsetTop) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  })();

  // Search dropdown
  const openSearch = document.querySelector('.js-open-search');
  const closeSearch = document.querySelector('.js-close-search');
  const search = document.querySelector('.header__search');
  const searchInput = document.querySelector('.header__search .header__search-input');
  

  openSearch.addEventListener('click', () => {
    console.log('asdlfkjhas')
    if (search.classList.contains('is-visible')) {
      search.classList.remove('is-visible');
    } else {
      search.classList.add('is-visible');
      searchInput.setAttribute('tabindex', '0');
      setTimeout(function() {
        searchInput.focus();
      }, 500)
    }
  });

  closeSearch.addEventListener('click', () => {
    search.classList.remove('is-visible');
  });
{% endjavascript %}

{% schema %}
{
  "name": "Header",
  "class": "shopify-section-header",
  "settings": [
    {
      "type": "checkbox",
      "id": "transparent_header",
      "label": "Enable transparent header",
      "default": true
    },
    {
      "type": "textarea",
      "id": "svg_logo",
      "label": "SVG Logo",
      "info": "Optional. This will override logo image picker."
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.header.settings.logo.label"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 150,
      "unit": "px",
      "label": "Logo Width"
    },
    {
      "type": "range",
      "id": "mobile_logo_width",
      "min": 50,
      "max": 250,
      "step": 5,
      "default": 100,
      "unit": "px",
      "label": "Mobile Logo Width"
    },
    {
      "type": "select",
      "id": "logo_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left",
      "label": "Logo Position"
    },
    {
      "type": "url",
      "id": "logo_link",
      "label": "Logo Link"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Main Menu"
    },
    {
      "type": "link_list",
      "id": "secondary_menu",
      "label": "Secondary Menu"
    },
    {
      "type": "link_list",
      "id": "mobile_menu",
      "label": "Mobile Menu"
    }
  ],
  "blocks": [
    {
      "type": "mega_menu",
      "name": "Mega Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Menu Item",
          "info": "Enter menu item to apply a mega menu dropdown."
        },
        {
          "type": "url",
          "id": "shop_all_link",
          "label": "Shop All Link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "button_overlay_label",
          "label": "Button Overlay Label"
        },
        {
          "type": "url",
          "id": "button_overlay_link",
          "label": "Button Overlay Link"
        }
      ]
    }
  ]
}
{% endschema %}
