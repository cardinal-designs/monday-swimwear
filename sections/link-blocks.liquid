{{ 'section-link-blocks.css' | asset_url | stylesheet_tag }}

<div class="link-blocks">
  <div class="page-width">
    <div class="link-blocks__container link-blocks__container--{{ section.blocks.size }} link-blocks__container--{{ section.settings.text_style }}">
      {% for block in section.blocks %}
        <div class="link-blocks__item" {{ block.shopify_attributes }}>
          {% render 'lazy-image' image: block.settings.image, fade: true, classes: 'img-fill' %}
          <div class="link-blocks__item-content">
            {% if section.settings.text_style == 'overlay' %}
              <h2 class="sh1">{{ block.settings.text }}</h2>
            {% else %}
              <h2 class="h4">{{ block.settings.text }}</h2>
            {% endif %}
            <a href="{{ block.settings.link }}" class="text-link">{{ block.settings.link_label }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Link Blocks",
    "settings": [
      {
        "type": "select",
        "id": "text_style",
        "label": "Text Style",
        "options": [
          {
            "value": "overlay",
            "label": "Overlay"
          },
          {
            "value": "underneath",
            "label": "Underneath Image"
          }
        ],
        "default": "overlay"
      }
    ],
    "blocks": [
      {
        "type": "link_block",
        "name": "Link Block",
        "limit": 4,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "link_label",
            "label": "Link Label"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Link Blocks",
        "category": "Custom"
      }
    ]
  }
{% endschema %}