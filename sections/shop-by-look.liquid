{{ 'section-shop-by-look.css' | asset_url | stylesheet_tag: preload: true }}

<div class="shop-by-look">
  <div class="page-width">
    <h2 class="shop-by-look__title">{{ section.settings.title }}</h2>
    <div class="shop-by-look__container">
      {% for block in section.blocks %}
        <div class="shop-by-look__item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="shop-by-look__image">
            {% render 'lazy-image' image: block.settings.image, force_fade: true, classes: 'img-fill' %}
          </a>
          <div class="shop-by-look__item-content">
            <h4 class="shop-by-look__item-title">{{ block.settings.title }}</h4>
            {% if block.settings.link_label != blank %}
              <a href="{{ block.settings.link }}" class="text-link">{{ block.settings.link_label }}</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Shop By Look",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "link_label",
            "label": "Link Label"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Shop By Look"
      }
    ]
  }
{% endschema %}