<div class="events-services event-block" data-section="services">
  <h2 class="event-title sh3">{{ section.settings.title }}</h2>
  <div class="events-services__container">
    {% for block in section.blocks %}
      <div class="events-services__item" {{ block.shopify_attributes }}>
        <div class="events-services__image">
          {% render 'lazy-image' image: block.settings.image, fade: true, classes: 'img-fill' %}
        </div>
        <div class="events-services__content">
          <div class="events-services__content-container fade-in-up">
            {% if block.settings.subtitle != blank %}
              <p class="events-services__subtitle detail">{{ block.settings.subtitle }}</p>
            {% endif %}
            {% if block.settings.title != blank %}
              <h2 class="events-services__title h2">{{ block.settings.title }}</h2>
            {% endif %}
            {% if block.settings.link_label != blank %}
              <a href="{{ block.settings.link }}" class="events-services__link text-link">{{ block.settings.link_label }}</a>
            {% endif %}
          </div>
          <!-- Calendly inline widget begin -->
          <div class="calendly-inline-widget" data-url="https://calendly.com/grove-popup-appointments/30min-fit-session" style="padding-top:30px;min-width:100%;height:630px;"></div>
          <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
          <!-- Calendly inline widget end -->
          <!-- Calendly inline widget begin -->
          <div class="calendly-inline-widget" data-url="https://calendly.com/grove-popup-appointments/30min-fit-session?primary_color=fcf8e9" style="padding-top:30px;min-width:100%;height:700px;"></div>
          <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
          <!-- Calendly inline widget end -->
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Services",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Our Services"
      }
    ],
    "blocks": [
      {
        "type": "service",
        "name": "Service",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "link_label",
            "label": "Link Label"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ]
  }
{% endschema %}