{{ 'section-editorial-text-image.css' | asset_url | stylesheet_tag }}

<div class="editorial-text-image">
  <div class="editorial-text-image__image">
    {% render 'lazy-image' image: section.settings.image, fade: true, classes: 'img-fill' %}
  </div>
  <div class="editorial-text-image__container">
    <div class="page-width">
      <div class="editorial-text-image__content hide-mobile">
        <h2>{{ section.settings.text }}</h2>
        <a href="{{ section.settings.button_link }}" class="button button--white">{{ section.settings.button_label }}</a>
      </div>
      <div class="editorial-text-image__content hide-desktop">
        <h2>{{ section.settings.mobile_text }}</h2>
        <a href="{{ section.settings.button_link }}" class="text-link">{{ section.settings.button_label }}</a>
      </div>
      <h2 class="h1 word-1">{{ section.settings.word_1 }}</h2>
    </div>
    <h2 class="h1 word-2">{{ section.settings.word_2 }}</h2>
  </div>
  <div class="editorial-text-image__bottom-text">
    <h2 class="h1 word-3">{{ section.settings.word_3 }}</h2>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <h2 class="h1 word-4">{{ section.settings.word_4 }}</h2>
  </div>
</div>

{% schema %}
  {
    "name": "Editorial Text / Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "Editorial Overlay Words"
      },
      {
        "type": "text",
        "id": "word_1",
        "label": "Word 1"
      },
      {
        "type": "text",
        "id": "word_2",
        "label": "Word 2"
      },
      {
        "type": "text",
        "id": "word_3",
        "label": "Word 3"
      },
      {
        "type": "text",
        "id": "word_4",
        "label": "Word 4"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "textarea",
        "id": "mobile_text",
        "label": "Shortened Mobile Text",
        "info": "This will only show on mobile in place of other copy."
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Editorial Text / Image"
      }
    ]
  }
{% endschema %}