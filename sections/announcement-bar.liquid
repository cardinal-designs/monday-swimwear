<div class="announcement-bar">
  <div class="page-width">
    <div class="announcement-bar__wrapper">
      <button class="swiper-button swiper-button-prev">
        {% render 'icon-arrow-left' %}
      </button>
      <div class="announcement-bar__slider swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="announcement-bar__item swiper-slide" {{ block.shopify_attributes }}>
              <div class="page-width">
                <p class="body-small">{{ block.settings.text }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <button class="swiper-button swiper-button-next">
        {% render 'icon-arrow-right' %}
      </button>
    </div>
  </div>
</div>

{% style %}
  .announcement-bar {
    color: {{ section.settings.text_color }};
    background-color: {{ section.settings.background_color }};
  }

  .announcement-bar a {
    color: {{ section.settings.text_color }};
  }
{% endstyle %}

{% javascript %}
  const announcementBarSlider = new Swiper('.announcement-bar__slider', {
    slidesPerView: 1,
    loop: true,
    spaceBetween: 20,
    navigation: {
      nextEl: '.announcement-bar .swiper-button-next',
      prevEl: '.announcement-bar .swiper-button-prev',
    },
    autoplay: {
      delay: 4000,
    }
  });
{% endjavascript %}
 
 
{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}
