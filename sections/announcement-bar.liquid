<div class="announcement-bar swiper">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="announcement-bar__item swiper-slide">
        <div class="page-width">
          <p class="body-small">{{ block.settings.text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .announcement-bar {
    color: {{ section.settings.text_color }};
    background-color: {{ section.settings.background_color }};
  }

  .announcement-bar a {
    color: {{ section.settings.text_color }};
  }
</style>

{% javascript %}
  const announcementBarSlider = new Swiper('.announcement-bar', {
    slidesPerView: 1,
    loop: true,
    spaceBetween: 20
  });
{% endjavascript %}
 

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}
