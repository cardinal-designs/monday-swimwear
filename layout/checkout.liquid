<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
    
    <style>
      .logo__image {
        max-width: 320px;
      }
      
      @media (min-width: 1000px) {
        .order-summary__sections {
          height: inherit;
        }
      }
    </style>
  </head>
  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
            
            <p class="checkout-note">
              Please check that all item(s) in your cart are correct.â€¨Orders are unable to be changed or cancelled once placed.<br>
              Allow 1-7 business days for processing before orders ship from our warehouse (this excludes expedited orders).<br>
              We are seeing significant delays with international delivery, please allow an additional 2-3 weeks for delivery.<br>
              All sale items are final sale.
            </p>
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
    
    <!-- PASSPORT BREAKOUT SCRIPT --> 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script> 
    <script src="https://api.passportshipping.com/external/shopify/themes/utils/utils.js?ts=1620030299559" type="text/javascript"></script> 
    <script src="https://api.passportshipping.com/external/shopify/themes/taxesAndDuties/taxesAndDuties.js?ts=1620030299559" type="text/javascript"></script> 
    <!-- /PASSPORT BREAKOUT SCRIPT -->

  </body>
</html>
