{% assign monday_body = false %}
{% if page.handle != blank %}
  {% if page.metafields.custom.monday_body == true %}
    {% assign monday_body = true %}
  {% endif %}
{% elsif product.handle != blank %}
  {% if product.metafields.custom.monday_body == true %}
    {% assign monday_body = true %}
  {% endif %}
{% elsif collection.handle != blank %}
  {% if collection.metafields.custom.monday_body == true %}
    {% assign monday_body = true %}
  {% endif %}
{% endif %}

<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    {% render 'shop-sheriff-amp' %}
    {% render 'kiwiSizing' %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
    {%- endif -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}
 
    {% style %}
      /* Sunset Gothic - Medium */
      @font-face {
        font-family: 'Sunset Gothic';
        src: url('{{ "Sunset-Gothic-Medium-Pro.woff2" | asset_url }}') format('woff2'),
             url('{{ "Sunset-Gothic-Medium-Pro.woff" | asset_url }}') format('woff');
        font-style: normal;
        font-weight: 600;
      }

      /* Tobias - Thin */
      @font-face {
        font-family: 'Tobias';
        src: url('{{ "Tobias-Thin.woff2" | asset_url }}') format('woff2'),
             url('{{ "Tobias-Thin.woff" | asset_url }}') format('woff');
        font-style: normal;
        font-weight: 200;
      }

      /* Neue Haas Unica Pro */
      @font-face {
        font-family: 'Neue Haas Unica Pro';
        src: url('{{ "Neue-Haas-Unica-Pro.ttf" | asset_url }}');
        font-style: normal;
        font-weight: 400;
      }

      /* ABC Favorit */
      @font-face {
        font-family: 'ABC Favorit';
        src: url('{{ "ABCFavoritVariable.woff2" | asset_url }}') format('woff2'),
             url('{{ "ABCFavoritVariable.woff" | asset_url }}') format('woff');
        font-style: normal;
        font-weight: 400;
      }

      :root {
        --bone: #FAF5E1;
        --tan: #EBE8DB;
        --yellow: #FFFF50;
        --yellow-tint: #FFFF85;
        --sky: #C1D7EC;

        --header-height: 65px;
        --mobile-header-height: 58px;


        --font-body-scale: {{ settings.body_scale | divided_by: 100.0 }};
        --font-heading-scale: {{ settings.heading_scale | times: 1.0 | divided_by: settings.body_scale }};

        --page-width: 1440px;
        --page-width-margin: 1440px;
      }

      *,
      *::before,
      *::after {
        box-sizing: inherit;
      }

      html {
        box-sizing: border-box;
        height: 100%;
      }

      body {
        display: grid;
        grid-template-rows: auto auto 1fr auto;
        grid-template-columns: 100%;
        min-height: 100%;
        margin: 0;
        font-family: sans-serif;
        color: {{ settings.text_color }};
        background: {{ settings.background_color }};
      }

      a {
        text-decoration: none;
        color: {{ settings.text_color }};
      }

      button {
        margin: 0;
        padding: 0;
        border: 0;
        background: none;
        -webkit-appearance: none;
        appearance: none;
        cursor: pointer;
        color: {{ settings.text_color }};
      }
    {% endstyle %}
    <link
      rel="stylesheet"
      href="{{ 'swiper-bundle.min.css' | asset_url }}"
      media="print"
      onload="this.media='all'" />
    <link rel="preload" href="{{ 'base.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="{{ 'base.css' | asset_url }}"></noscript>
    {% if monday_body %}
      <link rel="stylesheet" data-lazy-href="https://use.typekit.net/etr7yuj.css">
      <link rel="preload" href="{{ 'monday-body-base.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
      <noscript><link rel="stylesheet" href="{{ 'monday-body-base.css' | asset_url }}"></noscript>
    {% endif %}

    <link rel="stylesheet" href="{{ 'custom.css' | asset_url }}">
  
    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    </script>
    <script data-lazy-src="https://cdn-widgetsrepository.yotpo.com/v1/loader/-5gOz8RpODzYo99FGIpnAQ" async></script>

    {% comment %} Preload Render Blocking Resources -- Start {% endcomment %}
    <link rel="preconnect" type="text/css" href="https://crossborder-integration.global-e.com/resources/css/1260/{{localization.country.iso_code}}" as="style">
    <link rel="preconnect" href="https://crossborder-integration.global-e.com" crossorigin>
    {{ 'preconnect_resources.js' | asset_url | preload_tag: as: "script" }}
    {{ 'component-collection-filters.css' | asset_url | preload_tag: as: "style" }}
    {{ 'section-hero.css' | asset_url | preload_tag: as: "style" }}
    {{ 'preloader.js' | asset_url | preload_tag: as: "script" }}
    {{ 'lazy.js' | asset_url | preload_tag: as: "script" }}
    {{ 'component-cart-drawer.css' | asset_url | preload_tag: as: "style" }}
    {{ 'section-link-blocks.css' | asset_url | preload_tag: as: "style" }}
    {{ 'section-footer.css' | asset_url | preload_tag: as: "style" }}
    {{ 'aplha.js' | asset_url | preload_tag: as: "script" }}
    {{ 'component-loading-overlay.css' | shopify_asset_url | preload_tag: as: "style" }}
    {{ 'app_wishlist-king_templates.css' | asset_url | preload_tag: as: "style" }}
    {{ 'bootstrap.js' | asset_url | preload_tag: as: "script" }}
    {% comment %} Preload Render Blocking Resources -- End {% endcomment %}
    
    {% render 'globale-js' %}
    
    <script src="{{ 'jquery.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'outline.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'gsap.min.js' | asset_url }}" defer="async"></script>
    <script src="{{ 'scroll-trigger.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'headroom.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'lazysizes.min.js' | asset_url }}" defer="defer"></script>
    {%- render 'optimization' -%}
    <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'zoom.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'global.js' | asset_url }}" defer="async"></script>
    <script src="{{ 'custom-scripts.js' | asset_url }}" defer="defer"></script>

    {%- assign content_for_header = content_for_header | replace: "window.addEventListener('load'", "window.addEventListener('load-head-scripts'" -%}
    {{ content_for_header }}

    {% if settings.ss_enable %}
      {% render 'ss-script' %}
    {% endif %}
  </head>

  <body class="template-{{ template.name }}{% if page.handle %} page-{{ page.handle }}{% endif %}{% if monday_body %} monday-body{% endif %}{% if settings.ss_enable and collection.handle and collection.handle == settings.ss_collection_handle %} ss-shop{% endif %} {% if collection.metafields.custom.password != blank %}collection-denied{% endif %}">
    <img
      alt="LCP"
      width="99999"
      height="99999"
      style="pointer-events: none; position: absolute; top: 0; left: 0; width: 99vw; height: 99vh; max-width: 99vw; max-height: 99vh;"
      src="data:image/svg+xml;base64,"
    >

    <script>
      window.KlarnaThemeGlobals={};{%case template.name%} {%when"product"%} {% if product.first_available_variant.price %}window.KlarnaThemeGlobals.data_purchase_amount = {{ product.first_available_variant.price }};{% endif %}window.KlarnaThemeGlobals.productVariants={{product.variants|json}};window.KlarnaThemeGlobals.documentCopy=document.cloneNode(true);{%when"cart"%} window.KlarnaThemeGlobals.data_purchase_amount={{cart.total_price}};window.KlarnaThemeGlobals.documentCopy=document.cloneNode(true);{%endcase%}
    </script>

    <div class="page-wrapper">
      <a class="skip-to-content-link button visually-hidden" href="#MainContent">
        {{ 'accessibility.skip_to_text' | t }}
      </a>

      <div class="page-overlay"></div>
      {% section 'countdown' %}
      {% section 'announcement-bar' %}

      {% if monday_body %}
        {% section 'body-header' %}
      {% else %}
        {% section 'header' %}
      {% endif %}

      {%- if template != 'cart' -%}
        {% section 'cart-drawer' %}
      {%- endif -%}

      <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
        {{ content_for_layout }}
      </main>

      {% if monday_body %}
        {% section 'body-footer' %}
      {% else %}
        {% section 'footer' %}
      {% endif %}

      <div class="credits">
        <div class="page-width">
          <div class="credits__container">
            <p class="body-small">
              Design by <a href="https://www.lustre.nyc/" target="_blank">Lustre</a>&nbsp;&nbsp;/&nbsp;&nbsp;Development
              by <a href="https://cardinalco.agency/" target="_blank">Cardinal & Co.</a>
            </p>
            <button class="credits__close button button--white-ghost">Close</button>
          </div>
        </div>
      </div>

      <ul hidden>
        <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
      </ul>
    </div>

    <script>
      window.shopUrl = '{{ shop.url }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}'
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
      }

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
      }

      window.accessibilityStrings = {
        shareSuccess: `{{ 'general.share.success_message' | t }}`,
      }
    </script>

