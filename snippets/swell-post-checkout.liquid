 <script type="text/javascript">
  $(document).ready(function() {

    email = "";
    var customerEmail = null;
    var checkoutEmail = "{{checkout.email}}";
    var email = null;
    {% if customer %}
    customerEmail = "{{customer.email}}";
    {% endif %}
    if(checkoutEmail && checkoutEmail.length > 0 && checkoutEmail.indexOf("@") >= 0){
    email = checkoutEmail;
    }
    if(email === null && customerEmail !== null){
    email = customerEmail;
    }
    $(".swell-referral").data("customer-email", email);
  });
</script>


