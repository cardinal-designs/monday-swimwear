<article class="article-card fade-in-up">
  <a href="{{ article.url }}">
    <div class="article-card__image">
      {% render 'lazy-image' image: article.image, fade: true, classes: 'img-fill' %}
    </div>
  </a>
  <div class="article-card__content">
    <p class="detail-caps">{{ article.published_at | date: '%b %Y' }}</p>
    <p class="body-large">{{ article.title }}</p>
    <a href="{{ article.url }}" class="text-link">Read More</a>
  </div>
</article>